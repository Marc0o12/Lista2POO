import java.util.Scanner;

public class QuadradoMagico {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int N = sc.nextInt();
        int[][] matriz = new int[N][N];

        // Lê a matriz
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++) {
                matriz[i][j] = sc.nextInt();
            }
        }

        int resultado = verificaQuadradoMagico(matriz, N);
        System.out.println(resultado);
    }

    public static int verificaQuadradoMagico(int[][] matriz, int N) {
        int somaEsperada = 0;
        for (int j = 0; j < N; j++) {
            somaEsperada += matriz[0][j];
        }

        // Verifica linhas
        for (int i = 0; i < N; i++) {
            int somaLinha = 0;
            for (int j = 0; j < N; j++) {
                somaLinha += matriz[i][j];
            }
            if (somaLinha != somaEsperada) return -1;
        }

        // Verifica colunas
        for (int j = 0; j < N; j++) {
            int somaColuna = 0;
            for (int i = 0; i < N; i++) {
                somaColuna += matriz[i][j];
            }
            if (somaColuna != somaEsperada) return -1;
        }

        // Verifica diagonal principal
        int somaDiagonalPrincipal = 0;
        for (int i = 0; i < N; i++) {
            somaDiagonalPrincipal += matriz[i][i];
        }
        if (somaDiagonalPrincipal != somaEsperada) return -1;

        // Verifica diagonal secundária
        int somaDiagonalSecundaria = 0;
        for (int i = 0; i < N; i++) {
            somaDiagonalSecundaria += matriz[i][N - 1 - i];
        }
        if (somaDiagonalSecundaria != somaEsperada) return -1;

        return somaEsperada;
    }
}
